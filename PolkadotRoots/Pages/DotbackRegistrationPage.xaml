<?xml version="1.0" encoding="utf-8" ?>
<page:PageTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolkadotRoots.Pages.DotbackRegistrationPage"
                   xmlns:form="clr-namespace:PlutoFramework.Components.Form;assembly=PlutoFramework"
             xmlns:page="clr-namespace:PlutoFramework.Templates.PageTemplate;assembly=PlutoFramework"
             xmlns:buttons="clr-namespace:PlutoFramework.Components.Buttons;assembly=PlutoFramework"
                   xmlns:events="clr-namespace:PolkadotRoots.Components.Events;assembly=PolkadotRoots"
                   xmlns:address="clr-namespace:PlutoFramework.Components.AddressView;assembly=PlutoFramework"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#0f0f12}">
    <ScrollView>
        <VerticalStackLayout Padding="18" Spacing="16">
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="8">
                <events:EventLittleItemView Title="{Binding EventTitle}"
                            ImageSource="{Binding EventImageUrl}"
                            StartDate="{Binding EventStartDate}"
                            Command="{Binding OpenEventDetailsPageCommand}"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"/>

                <address:SubscanAddressView Title="Your address:"
                            Address="{Binding Address}"
                            AddressText="{Binding Address}"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2" />
            </Grid>

            <!-- Conversion info -->
            <VerticalStackLayout Spacing="2" IsVisible="{Binding HasConversion}">
                <Label Text="{Binding ConversionText}" FontSize="12" TextColor="{AppThemeBinding Light=#6b7280, Dark=#b8b9c1}"/>
                <Label Text="{Binding ConvertedEstimateText}" FontSize="14" FontAttributes="Bold" IsVisible="{Binding HasConvertedEstimate}"/>
            </VerticalStackLayout>
            
            <Label Text="{Binding RequestedAmountTitleText}" FontSize="14" TextColor="{AppThemeBinding Light=#9ca3af, Dark=#d1d5db}" />
            <form:FormInputView Placeholder="Enter requested amount"
                                KeyboardType="Numeric"
                                Text="{Binding Amount}" />

            <Label Text="Note: if you enter a higher amount than what is on the receipt, your DOT-back will get rejected." FontSize="14" TextColor="{AppThemeBinding Light=#9ca3af, Dark=#d1d5db}" />

            <form:FormImageUploadView Title="Upload receipt"
                                      ImageStream="{Binding ImageStream}" />

            <buttons:ElevatedButton Text="Submit"
                                    ButtonState="{Binding SubmitButtonState}"
                                    Command="{Binding SubmitCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</page:PageTemplate>