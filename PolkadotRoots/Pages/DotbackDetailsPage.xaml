<?xml version="1.0" encoding="utf-8" ?>
<page:PageTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolkadotRoots.Pages.DotbackDetailsPage"
                   xmlns:nft="clr-namespace:PlutoFramework.Components.Nft;assembly=PlutoFramework"
                   xmlns:address="clr-namespace:PlutoFramework.Components.AddressView;assembly=PlutoFramework"
             xmlns:page="clr-namespace:PlutoFramework.Templates.PageTemplate;assembly=PlutoFramework"
             xmlns:buttons="clr-namespace:PlutoFramework.Components.Buttons;assembly=PlutoFramework"
                   xmlns:events="clr-namespace:PolkadotRoots.Components.Events;assembly=PolkadotRoots"
                   xmlns:subscan="clr-namespace:PlutoFramework.Components.Subscan;assembly=PlutoFramework"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#0f0f12}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <nft:NftImageView ImageSource="{Binding ImageUrl}" />

            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">

                <Label Grid.Row="0" Grid.Column="0" Text="Requested:" TextColor="{AppThemeBinding Light=#6b7280, Dark=#b8b9c1}"
                       VerticalTextAlignment="End"/>
                <Label Grid.Row="0" Grid.Column="1">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding ValueText}"
                                  FontAttributes="Bold"
                                  FontSize="25"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Grid.Row="1" Grid.Column="0" Text="Status:" TextColor="{AppThemeBinding Light=#6b7280, Dark=#b8b9c1}"
                       VerticalTextAlignment="End"/>
                <Label Grid.Row="1" Grid.Column="1" TextColor="{Binding StatusColor}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding StatusText}"
                                  TextColor="{Binding StatusColor}"
                                  FontAttributes="Bold"
                                  FontSize="25"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                
                <events:EventLittleItemView Title="{Binding EventTitle}"
                                            ImageSource="{Binding EventImageUrl}"
                                            StartDate="{Binding EventStartDate}"
                                            Command="{Binding OpenEventDetailsPageCommand}"
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"/>

                <address:SubscanAddressView Title="Recipient:"
                                            Address="{Binding Address}"
                                            AddressText="{Binding Address}"
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2" />

                <subscan:OpenSubscanButton Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" IsVisible="{Binding HasSubscan}">
                    <subscan:OpenSubscanButton.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenSubscanCommand}" />
                    </subscan:OpenSubscanButton.GestureRecognizers>
                </subscan:OpenSubscanButton>
            </Grid>

            <buttons:ElevatedButton Text="Pay (DOT)"
                                    ButtonState="Enabled"
                                    IsVisible="{Binding ButtonIsVisible}"
                                    Command="{Binding PayCommand}"/>

            <buttons:ElevatedButton Text="Reject"
                                    ButtonState="Warning"
                                    IsVisible="{Binding ButtonIsVisible}"
                                    Command="{Binding RejectCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</page:PageTemplate>